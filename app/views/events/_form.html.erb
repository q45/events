<%= form_for(@event) do |f|%>
	<p>
		<%= f.label :name %>
		<%= f.text_field  :name, autofocus: true %>
	</p>

	<p>
		<%= f.label :price %>
		<%= f.text_field :price %>
	</p>

	<p>
		<%= f.label :location %>
		<%= f.text_field :location %>
	</p>
	<p>
		<%= f.label :description %>
		<%= f.text_area :description, cols: 40, rows: 7   %>

	</p>
	<p>

		<%= f.submit %>
		<%= link_to "cancel", events_path %>
	</p>

<% end %>